<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Java实现："
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnAPKRaw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="读取raw目录资源"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnAPKAssets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="读取assets目录资源"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnPrivateInner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="读写应用私有数据（内部）" />

        <Button
            android:id="@+id/btnPrivateOutter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="读写应用私有数据（外部）" />

        <Button
            android:id="@+id/btnPublic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="读写共享数据" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kotlin实现："
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnAPKRawKT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="读取raw目录资源"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnAPKAssetsKT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="读取assets目录资源"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnPrivateInnerKT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="读写应用私有数据（内部）" />

        <Button
            android:id="@+id/btnPrivateOutterKT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="读写应用私有数据（外部）" />

        <Button
            android:id="@+id/btnPublicKT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="读写共享数据" />
    </LinearLayout>
</ScrollView>
