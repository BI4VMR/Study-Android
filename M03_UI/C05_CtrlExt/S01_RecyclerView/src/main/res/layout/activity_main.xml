<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Java实现："
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基本应用" />

        <Button
            android:id="@+id/btnClickEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="表项点击事件" />

        <Button
            android:id="@+id/btnViewType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="加载多种表项"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnUpdateList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="动态更新列表" />

        <Button
            android:id="@+id/btnUpdateItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="局部刷新" />

        <Button
            android:id="@+id/btnDiffUtil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DiffUtil"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnDiffUtilAsync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DiffUtil - 异步计算"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnViewCache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="缓存与复用" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kotlin实现："
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnBaseKT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基本应用"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnClickEventKT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="表项点击事件" />

        <Button
            android:id="@+id/btnViewTypeKT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="加载多种表项"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnUpdateListKT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="动态更新列表" />

        <Button
            android:id="@+id/btnUpdateItemKT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="局部刷新" />

        <Button
            android:id="@+id/btnDiffUtilKT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DiffUtil"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnDiffUtilAsyncKT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DiffUtil - 异步计算"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>
