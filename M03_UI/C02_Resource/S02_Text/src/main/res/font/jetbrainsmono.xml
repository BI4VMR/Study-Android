<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 定义字体
         "font":声明该字体对应的文件。
         "fontStyle":声明样式是正常还是斜体。
         "fontWeight":声明字重。
    -->
    <font
        android:font="@font/jetbrainsmono_light"
        android:fontStyle="normal"
        android:fontWeight="300" />

    <font
        android:font="@font/jetbrainsmono_lightitalic"
        android:fontStyle="italic"
        android:fontWeight="300" />

    <font
        android:font="@font/jetbrainsmono_regular"
        android:fontStyle="normal"
        android:fontWeight="400" />

    <font
        android:font="@font/jetbrainsmono_italic"
        android:fontStyle="italic"
        android:fontWeight="400" />

    <font
        android:font="@font/jetbrainsmono_medium"
        android:fontStyle="normal"
        android:fontWeight="500" />

    <font
        android:font="@font/jetbrainsmono_mediumitalic"
        android:fontStyle="italic"
        android:fontWeight="500" />

    <font
        android:font="@font/jetbrainsmono_bold"
        android:fontStyle="normal"
        android:fontWeight="700" />

    <font
        android:font="@font/jetbrainsmono_bolditalic"
        android:fontStyle="italic"
        android:fontWeight="700" />
</font-family>
