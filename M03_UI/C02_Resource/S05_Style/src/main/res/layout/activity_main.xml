<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Java实现："
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="样式 - 基本应用"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="主题 - 基本应用"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnThemeAttrsInternal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="主题 - 内置属性"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnThemeAttrsCustom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="主题 - 自定义属性"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnThemeDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="主题 - 深色模式"
            android:textAllCaps="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kotlin实现："
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnBaseKT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="样式 - 基本应用"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnThemeKT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="主题 - 基本应用"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnThemeAttrsInternalKT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="主题 - 内置属性"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnThemeAttrsCustomKT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="主题 - 自定义属性"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnThemeDarkKT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="主题 - 深色模式"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>
